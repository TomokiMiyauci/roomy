{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@nuxtjs/vuetify",
      "@types/dom-mediacapture-record",
      "@types/qrcode",
      "@nuxtjs/axios"
    ],
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file. */,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~types/*": [
        "../share/*"
      ]
    }
  },

  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./stories/**/*"
  ]
}
