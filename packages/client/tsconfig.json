{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@nuxtjs/vuetify"
    ],
    "rootDirs": ["src", "stories"],
    "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file. */,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./stories/**/*"
  ]
}
